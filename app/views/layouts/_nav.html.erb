
<!-- Fixed navbar -->
<div class="navbar navbar-inverse navbar-fixed-top headroom">
  <div class="container">
    <div class="navbar-header">
      <!-- Button for smallest screens -->
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"><span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
      <%= link_to image_tag("site/logo.jpg", alt: "Jackie Consign's Decatur"), root_path %>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav pull-right">
        <li class="active"><%= link_to "Home", root_path %></li>
        <li><%= link_to "About", about_path %></li>
        <li class="dropdown">
          <%= link_to 'Consign <b class="caret"></b>'.html_safe, nil, class: "dropdown-toggle", :data => { toggle: "dropdown" } %>
          <ul class="dropdown-menu">
            <li><%= link_to "How it works", consign_path %></li>
            <li class="active"><%= link_to "Terms", terms_path %></li>
            <li><%= link_to "Submit item photo", new_product_path %></li>
            <li><%= link_to "View my items", myitems_path %></li>
          </ul>
        </li>
        <li class="dropdown">
          <%= link_to 'Shop <b class="caret"></b>'.html_safe, nil, class: "dropdown-toggle", :data => { toggle: "dropdown" } %>
          <ul class="dropdown-menu">
            <li><%= link_to "Store Display", products_path %></li>
            <li><%= link_to "Lighting", products_path(product_type: Product::LIGHTING_PRODUCT_TYPE) %></li>
            <li><%= link_to "Decorative Items", products_path(product_type: Product::DECORATIVE_ITEMS_PRODUCT_TYPE) %></li>
            <li class="active"><%= link_to "Art", products_path(product_type: Product::ART_PRODUCT_TYPE) %></li>
            <li><%= link_to 'Tables', products_path(product_type: Product::TABLES_PRODUCT_TYPE) %></li>
            <li><%= link_to "Seating", products_path(product_type: Product::SEATING_PRODUCT_TYPE) %></li>
          </ul>
        </li>
        <li><%= link_to "Contact", new_contact_path %></li>
        <% if user_signed_in? %>
          <div class="btn-group">
            <button type="button" class="btn btn-xs dropdown-toggle" data-toggle="dropdown">
              Account <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" role="menu">
              <li>
                <%= link_to edit_user_registration_path do %>
                  <i class="fa fa-cogs"></i> Settings
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <i class="fa fa-eject"></i> Logout
                <% end %>
              </li>
            </ul>
          </div>
        <% else %>
          <li><%= link_to "SIGN IN/SIGN UP", new_user_session_path, class: "btn btn-xs" %></li>
        <% end %>
      </ul>
    </div><!--/.nav-collapse -->
  </div>
</div> 
<!-- /.navbar -->
